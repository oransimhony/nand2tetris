/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not (in=sel, out=nSel);
    And (a=a, b=nSel, out=aAndnSel);
    And (a=sel, b=b, out=selAndb);
    Or (a=aAndnSel, b=selAndb, out=out);
}
